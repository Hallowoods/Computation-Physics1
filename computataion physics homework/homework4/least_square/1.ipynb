   "source": [
    "# 创建一个示例矩阵\n",
    "\n",
    "import numpy as np\n",
    "matrix = np.array([[1, 2], [3, 4]])\n",
    "\n",
    "# 增大矩阵的大小，添加零\n",
    "larger_matrix = np.pad(matrix, ((0, 2), (0, 0)), mode='constant')\n",
    "\n",
    "# 打印扩展后的矩阵\n",
    "print(\"原矩阵:\\n\", matrix)\n",
    "print(\"扩展后的矩阵:\\n\", larger_matrix)"
   ]
  }
 ],
